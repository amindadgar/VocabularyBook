<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/shape_top_round_corners"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.WordsInDetailFragment">

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textStyle="bold"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:text="Definition" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/definition_text"
        android:gravity="start|top"
        android:layout_margin="12dp"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content"
         />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:text="sample sentence" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/sample_sentence_text"
        android:layout_margin="12dp"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:text="phonetics" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        android:id="@+id/phonetics_text"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="12dp"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content"
        android:text="synonym" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="start|top"
        android:id="@+id/synonym_text"
        android:layout_margin="12dp"
        android:textColor="@color/Black90"
        android:textSize="22sp"
        android:layout_height="wrap_content" />

</LinearLayout>
</androidx.core.widget.NestedScrollView>